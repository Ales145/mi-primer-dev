---
const { actrices } = Astro.props;
---

<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 p-8">
    {actrices.map(actriz => (
        <article class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
                src={actriz.image} 
                alt={actriz.name}
                class="w-full h-64 object-cover"
            />
            <div class="p-6">
                <h2 class="text-2xl font-bold mb-2">{actriz.name}</h2>
                <p class="text-gray-700 mb-4">{actriz.bio}</p>
                <div class="text-sm text-gray-600">
                    <p><strong>Fecha de nacimiento:</strong> {actriz.birthDate}</p>
                    <p><strong>Lugar de nacimiento:</strong> {actriz.birthPlace}</p>
                    <p><strong>Altura:</strong> {actriz.height}</p>
                </div>
                <a 
                    href={`/actrices/${actriz.slug}`} 
                    class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors"
                >
                    Ver m√°s detalles
                </a>
            </div>
        </article>
    ))}
</section>

